<%= form_for [@project, @myfile], :html => { :multipart => true } do |f| %>
	<div class="field">
		<ul>
		<p><%= f.file_field :attachment %></p>
		<p><%= f.label "Select Category:" %></p>
		<p><%= f.select :category, 
			[ 'Ref Literature', 'Analysis' ], :prompt => 'Select One' %>
		</p>			
		<p><%= f.label "Add tags (seperate by comma)" %></p>
		<p><%= f.text_field :tagfield %></p>
		</ul>		
	</div>
	<%= f.submit %>
<% end %>