<table id="templates" class="display">
	<thead>
		<tr>
			<th>
				Select:
			</th>
			<th>
				For User:
			</th>
			<th>
				Project:
			</th>
			<th>
				Pool-Name:
			</th>
		</tr>
	</thead>
	<tbody>
		<% @templates.each do |template| %>
			<tr>
				<td>
					<%= check_box_tag "template_ids[]", template.id %>
				</td>
				<td>
					<%= template.get_for_user_name %>
				</td>
				<td>
					<%= template.get_project %>
				</td>
				<td>
					<%= template.get_pool_name %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>