<%= form_for [@inventory] do |f| %>
	<div class="field">
	    <p>User:</p>
	    <p><%= f.collection_select :user_id, User.all, :id, :name, {:include_blank => 'Select User'} %>
		<p>Item description:</p>
		<p><%= f.select :item_description, 
			[ 'Library prep', 'Template prep', 'Sequencing' ], :prompt => 'Select One' %></p>		
		<p>Select Category:</p>
	    <p><%= f.collection_select :category_id, Category.all, :id, :name, {:include_blank => 'Select Category'} %>
	    <p>Lot number:</p>
	    <%= f.text_field :lot_number, placeholder: "Lot number"  %>
	    <p>Price (Euro):</p>
	    <p><%= f.text_field :price %></p>
	    <p>Reaction kit:</p>
	    <p><%= f.text_field :reaction_kit, placeholder: "Reaction kit" %></p>
	    <p>Reactions used:</p>
	    <p><%= f.text_field :reactions_used, placeholder: "Reactions used" %></p>
	    <p>Best until:</p>
	    <p><%= f.text_field :best_till %></p>
	    <p>Date opened:</p>
	    <p><%= f.text_field :opened %></p>
	    <p>Is empty?</p>
	    <p><%= f.check_box(:empty) %></p>
	    <p>Comment:</p>
	    <p><%= f.text_area :comment, placeholder: "Comment" %></p>
  </div>
  <%= f.submit %>
  
<% end %>
