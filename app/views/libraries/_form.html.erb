<%= form_for [@project, @sample, @library] do |f| %>
<p>Library Name: <%= @library.lib_number %></p>
<table>
	<tbody>
		<tr>
			<td>
				<div class="field">
					<%= f.label "Library Date" %>
					<%= f.text_field :lib_date %>
				</div>				
			</td>
			<td>			
				<%= f.label "ul used" %>
				<%= f.text_field :ul_used %>
			</td>
			<td>			
				<%= f.label "Target size (bp)" %>
				<%= f.text_field :target_size %>
			</td>
		</tr>
		<tr>
			<td>
				<%= f.label "ng/ul" %>
				<%= f.text_field :quantity %>
			</td>	
			<td>
				<%= f.label "MID" %>
				<%= f.text_field :mid %>
			</td>
			<td>
				<%= f.label "Shearing/min" %>
				<%= f.text_field :shearing_min %>
			</td>
			
		</tr>		
		<tr>
			<td>
				<%= f.label "End repair done" %>
				<%= f.check_box :end_repair_done %>
			</td>								
			<td>
				<%= f.label "Number of Bands in Gel" %>
				<%= f.text_field :number_of_bands_in_eGel %>
			</td>
			<td>
				<%= f.label "Cycles of amplification" %>
				<%= f.text_field :cycles_of_amplification %>
			</td>
			
		</tr>
		<tr>
			<td>
				<%= f.label "Date Bioanalyser" %>
				<%= f.text_field :date_bioanalyser %>
			</td>
			<td>
				<%= f.label "pmol before" %>
				<%= f.text_field :pmol_before %>
			</td>
			<td>
				<%= f.label "pmol after" %>
				<%= f.text_field :pmol_after %>
			</td>


		</tr>
		<tr>
			<td>
				<%= f.label "Comment" %>
				<%= f.text_field :comment %>
			</td>


		</tr>
</table>
<hr>
	<p id="box_failed">
				<%= f.label "Library failed?" %>
				<%= f.check_box :failed %>				
	</p>
	<p id="comment_why">
		<%= f.label "Failed why?" %>
		<%= f.text_area :comment_why %>
	</p>
	<hr>
	<p>Select the kits used for your Library.</p>
	<p>Please select only one Kit at a time were needed.</p>
	<hr>
	<%= f.label "Select Shearing Kit" %>
	<div class="myInvTable">
    <table>  
	  <% if !@shearing_kits.blank? %>
	      <% @shearing_kits.each do |shearing_kit| %>
	        <tr>
	          <td> <%= check_box_tag('[shearing_kit]', shearing_kit.id, false) %> </td>
	          <td> <%= shearing_kit.category.name %> </td>
	          <td>| <%= shearing_kit.lot_number %> </td>          
	        </tr>
	      <% end %>
      <% end %>
    </table>	
    </div>
	<hr>
	<%= f.label "Select Fragmentation Kit" %>
	<div class="myInvTable">
    <table>
      <% if !@fragment_kits.blank? %>  
	      <% @fragment_kits.each do |fragment_kit| %>
	        <tr>
	          <td> <%= check_box_tag('[fragment_kit]', fragment_kit.id, false) %> </td>
	          <td> <%= fragment_kit.category.name %> </td>
	          <td>| LotNo. <%= fragment_kit.lot_number %> </td>
	        </tr>
	      <% end %>
      <% end %>
    </table>	
    </div>    
	<hr>
	<%= f.label "Select MID Kit" %>
	<div class="myInvTable">
    <table>
      <% if !@mid_kits_1_16.blank? %>  
	      <% @mid_kits_1_16.each do |kit_1_16| %>
	        <tr>
	          <td> <%= check_box_tag('[mid_kit]', kit_1_16.id, false) %> </td>
	          <td> <%= kit_1_16.category.name %> </td>
	          <td>| LotNo. <%= kit_1_16.lot_number %> </td>
	        </tr>
	      <% end %>
      <% end %>
      <% if !@mid_kits_17_32.blank? %>  
	      <% @mid_kits_17_32.each do |kit_17_32| %>
	        <tr>
	          <td> <%= check_box_tag('[mid_kit]', kit_17_32.id, false) %> </td>
	          <td> <%= kit_17_32.category.name %> </td>
	          <td>| LotNo. <%= kit_17_32.lot_number %> </td>
	        </tr>
	      <% end %>
      <% end %>
      <% if !@mid_kits_33_48.blank? %>  
	      <% @mid_kits_33_48.each do |kit_33_48| %>
	        <tr>
	          <td> <%= check_box_tag('[mid_kit]', kit_33_48.id, false) %> </td>
	          <td> <%= kit_33_48.category.name %> </td>
	          <td>| LotNo. <%= kit_33_48.lot_number %> </td>
	        </tr>
	      <% end %>
      <% end %>            
    </table>	
    </div>    
<hr>
	<%= f.submit %>
<% end %>