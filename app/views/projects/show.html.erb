<div class="container">

<aside class="myAside">

	<article>
		<hgroup>
			<h2>Project details:</h2>
		</hgroup>		
		<p>Name: <%= @project.name %></p>
		<p>State: <%= @project.state %></p>
		<p>Owner: <%= @project.user.name %></p>
		<p>Created at: <%= @project.created_at.to_date %></p>	
	</article>
	<hr />
	<p><%= link_to "Edit Project", edit_project_path(@project) %></p>
	<p><%= link_to "Create new Sample", new_project_sample_path(@project) %></p>
	<% if !@project.miane %>
		<p><%= link_to "Miane Information Wizard", new_project_miane_path(@project) %></p>	

		
	<% end %>
	<%else if @project.miane and @project.state == "Incomplete"%>
			<p><%= link_to "Edit Miane Sheet", edit_project_miane_path(@project) %></p>	
	<%end%>
	<hr/>
	<% if user_signed_in? and current_user.role == 'Moderator' %>	
	<p><%= link_to "Edit Miane Sheet", edit_project_miane_path(@project) %></p>	

	<article>
			<h3>Change Project State</h3>
		<p>
		<p>
			<%= form_for [@project] do |f| %>
			<%= f.select :state, [["Incomplete", "Incomplete"],
								["wait for approval", "wait for approval"], 
								["ready", "ready"],
								["processing", "processing"],
								["finished", "finished"],
								["closed", "closed"],
								["ready", "ready"],
								["on hold", "on hold"]] %>
			<%= f.submit %>
			<% end %>
		</p>			
		</p>
	</article>
	<% end %>		
</aside>
<section>
	<% if @project.miane %>
	<article>
		<h2>Miane Information</h2>
		<table id="miane" class="alternateTable">
			<tbody class="mytBody">

				<tr class="alt">
					<td width="30%">
						Aim:		
					</td>
					<td>
						<%= @project.miane.aims%>		
					</td>
				</tr>
				<tr>
					<td width="30%">
						Expected Result:		
					</td>
					<td>
						<%= @project.miane.expected_result%>		
					</td>
				</tr>
				<tr class="alt">
					<td width="30%">
						Why do you need NGS:		
					</td>
					<td>
						<%= @project.miane.why_ngs%>		
					</td>
				</tr>

				<tr>
					<td width="30%">
						Is there a possible Alternative:		
					</td>
					<td>
						<%= @project.miane.approach%>		
					</td>
				</tr>

				<tr class="alt">
					<td width="30%">
						Approach:		
					</td>
					<td>
						<%= @project.miane.approach%>		
					</td>
				</tr>

				<tr>
					<td width="30%">
						Positive Control:		
					</td>
					<td>
						<%= @project.miane.positive_control%>		
					</td>
				</tr>	

				<tr class="alt">
					<td width="30%">
						Negative Control:		
					</td>
					<td>
						<%= @project.miane.negative_control%>		
					</td>
				</tr>

				<tr>
					<td width="30%">
						Replicates:		
					</td>
					<td>
						<%= @project.miane.replicates%>		
					</td>
				</tr>

				<tr class="alt">
					<td width="30%">
						Possible Pitfalls:		
					</td>
					<td>
						<%= @project.miane.possible_pittfalls%>		
					</td>
				</tr>																				
				<tr>
					<td width="30%">
						Needs for Quality Control:		
					</td>
					<td>
						<%= @project.miane.needs_qc%>		
					</td>
				</tr>								

			</tbody>
		</table>		

	</article>
	<% else %>
		<article class="vim">
			<h1>No MIANE information exists !</h1>
		</article>
	<% end %>
</section>
<section>
	<%= render 'layouts/samples_table' %>
</section>
</div>
